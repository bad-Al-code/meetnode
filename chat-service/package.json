{
  "name": "meetnote-chat-service",
  "version": "1.0.0",
  "description": "Chat microservice for MeetNote",
  "main": "dist/server.js",
  "scripts": {
    "build": "pnpx tsc",
    "start": "node dist/server.js",
    "dev": "pnpx ts-node-dev  --respawn --transpile-only --exit-child --clear src/server.ts",
    "lint": "pnpx eslint . --ext .ts",
    "lint:fix": "pnpx eslint . --ext .ts --fix",
    "format": "pnpx prettier --write \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:script": "ts-node ./scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "chat",
    "microservice",
    "websockets",
    "meetnote",
    "typescript",
    "express"
  ],
  "author": "badalcodeorg",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "ws": "^8.18.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.14",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
