{
  "name": "meetnote-chat-service",
  "version": "1.0.0",
  "description": "Chat microservice for MeetNote",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev  --respawn --transpile-only --exit-child --clear src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:script": "ts-node ./scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:script:test": "dotenv -e .env.test -- ts-node ./scripts/migrate.ts",
    "db:push:test": "dotenv -e .env.test -- drizzle-kit push",
    "db:prepare:test": "pnpm db:script:test",
    "test": "pnpm db:prepare:test && jest --runInBand",
    "test:watch": "pnpm test -- --watch",
    "test:coverage": "pnpm test -- --coverage",
    "test:ci": "pnpm test -- --coverage --silent"
  },
  "keywords": [
    "chat",
    "microservice",
    "websockets",
    "meetnote",
    "typescript",
    "express"
  ],
  "author": "badalcodeorg",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.14",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
